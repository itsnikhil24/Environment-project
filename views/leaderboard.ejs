  <script>
 const searchInput = document.querySelector('.search-bar input');
  const leaderboardRows = document.querySelectorAll('#leaderboard tr');

  // Event listener for input in the search bar
  searchInput.addEventListener('input', (e) => {
    const query = e.target.value.toLowerCase().trim();

    leaderboardRows.forEach((row) => {
      const factoryName = row.children[1]?.textContent.toLowerCase(); // Get the factory name column text
      if (factoryName && factoryName.includes(query)) {
        row.style.display = ''; // Show row
      } else {
        row.style.display = 'none'; // Hide row
      }
    });
  });

    // Trophy icons based on points
    const getTrophyIcon = (points) => {
      if (points >= 200) return '<span class="trophy-icon">üèÜ</span>';
      if (points >= 150) return '<span class="trophy-icon">ü•à</span>';
      if (points >= 100) return '<span class="trophy-icon">ü•â</span>';
      return '<span class="trophy-icon">üî∞</span>';
    };

    // Populate leaderboard dynamically if needed
    const leaderboard = [
      { name: 'GreenTech', points: 250 },
      { name: 'EcoPure', points: 180 },
      { name: 'CleanEarth', points: 150 },
      { name: 'SolarPower', points: 130 },
      { name: 'EcoFactory', points: 120 },
      // Add more entries as needed
    ];

    const leaderboardTable = document.getElementById('leaderboard');
    leaderboard.forEach((entry, index) => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td class="serial-number">${index + 1}</td>
        <td>${entry.name}</td>
        <td>${entry.points}</td>
        <td class="trophy">${getTrophyIcon(entry.points)}</td>
      `;
      leaderboardTable.appendChild(row);
    });
  </script>
