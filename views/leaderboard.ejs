      font-family: 'Arial', sans-serif;
      background-color: #121212; /* Main background color */
      color: #e0e0e0; /* Text color */
    }

    /* Sidebar styles */
    .sidebar {
      width: 130px;
      height: 100vh;
      background-color: #1f1f1f; /* Sidebar background */
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      position: fixed;
      top: 0;
      left: 0;
    }

    .menu {
      display: flex;
      flex-direction: column;
    }

    .menu a {
      padding: 15px 20px;
      text-decoration: none;
      color: #bdbdbd;
      border-bottom: 1px solid #2b2b2b;
      font-size: 16px;
      transition: background-color 0.3s, color 0.3s ease;
    }

    .menu a:hover {
      background-color: #333;
      color: #ffffff;
    }

    .logout {
      padding: 15px 20px;
      text-align: center;
      color: #e0e0e0;
      background-color: #292929; /* Logout button background */
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s ease;
    }

    .logout:hover {
      background-color: #444;
    }

    /* Main container */
    .main-container {
      margin-left: 130px;
      width: 100%;
      display: flex;
      flex-direction: column;
    }

    /* Navbar styles */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #1f1f1f; /* Navbar background */
      padding: 10px 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
    }

    .navbar .home {
      font-size: 1.4rem;
      font-weight: bold;
      color: #e0e0e0;
    }

    .navbar .search-bar {
      flex: 1;
      margin: 0 20px;
    }

    .search-bar input {
      width: 100%;
      padding: 8px 12px;
      border: 1px solid #333;
      background-color: #292929;
      color: #ffffff;
      border-radius: 5px;
      font-size: 1rem;
    }

    .navbar .profile-section {
      display: flex;
      align-items: center;
    }

    .profile-section span {
      margin-right: 10px;
    }

    .profile-section .profile-pic {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    /* Leaderboard table */
    .leaderboard {
      margin: 20px;
      background-color: #1f1f1f;
      border-collapse: collapse;
      width: 98%;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.7);
    }

    .leaderboard th,
    .leaderboard td {
      padding: 15px;
      text-align: left;
    }

    .leaderboard th {
      background-color: #292929; /* Header background */
      font-weight: bold;
      text-transform: uppercase;
      color: #bdbdbd;
    }

    .leaderboard td {
      background-color: #1f1f1f; /* Row background */
      border-bottom: 1px solid #2b2b2b;
      color: #e0e0e0;
    }

    .leaderboard tr:hover td {
      background-color: #333; /* Highlight row on hover */
    }

    .serial-number {
      text-align: center;
      font-weight: bold;
    }

    .trophy {
      text-align: center;
    }

    /* Trophy Icon Styling */
    .trophy-icon {
      font-size: 1.2rem;
    }
    .profile-section a {
      color: white;
      text-decoration: none;
    }
    .profile-section a :hover{
      color: #9b59b6;
    }
  </style>
</head>
